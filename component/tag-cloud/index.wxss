/* component/tag-cloud/index.wxss */

page {
  height: 100%;
}

.mask {
  top: 0;
  bottom: 0;
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 99;
  background-color: rgba(255, 255, 255, 0.95);
  filter: blur(0);
}

.mask-content {
  position: absolute;
  padding: 20%;
  overflow-y: auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: auto;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
