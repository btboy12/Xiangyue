/* component/tag-cloud/index.wxss */

page {
  height: 100%;
}

.mask {
  top: 0;
  bottom: 0;
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 99;
  background-color: rgba(255, 255, 255, 0.95);
  filter: blur(0);
}

.mask-content {
  position: absolute;
  overflow-y: auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  top: 10%;
  /* height: 60%; */
  padding:0 10%;
}

.delete {
  position: absolute;
  bottom: 5%;
  text-align: center;
  width: 80%;
  margin: 10%;
  padding-top: 5%; 
  border-top: solid 1px #999;
}
