<view class='usercard'>
  <i-row>
    <i-col span='3' i-class='col-class'>
      <i-avatar src="{{avatarsrc}}" size="default" class='icon'></i-avatar>
    </i-col>
    <i-col span='19' i-class='col-class'>
      <view>
        <text>{{activityinfo.location}} </text>
        <text>{{activityinfo.time}} </text>
        <text>{{activityinfo.aim}} </text>
        <text>{{activityinfo.pay}} </text>
      </view>
      <view>{{activityinfo.brief}}</view>
    </i-col>
    <i-col span='2' i-class='col-class'>
      <i-icon type="like" wx:if="{{!checked}}" bindtap='joinThisActivity'  size="30"/>
      <i-icon type="like_fill" wx:else/>
    </i-col>
  </i-row>
</view>