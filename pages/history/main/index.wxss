/* pages/history/main/index.wxss */

page {
  height: 100%;
}

#container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

#title {
  position: relative;
}

#toolbox {
  position: absolute;
  width: 100%;
  bottom: -30rpx;
  z-index: 99;
  text-align: center;
}

#toolbox>view {
  display: inline-block;
  background-color: white;
  border-radius: 45rpx;
  box-shadow: 10rpx 10rpx 5rpx grey;
}

#toolbox navigator {
  display: inline-block;
  text-align: center;
  margin: 30rpx 80rpx;
}

#comment {
  flex-grow: 1;
  overflow-y: auto;
  width: 100%;
  height: 100%;
}
