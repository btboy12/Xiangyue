<!--pages/history/notice/index.wxml-->
<i-cell-group>
  <i-cell wx:for="{{notice}}" title="{{item.text}}" wx:key="text">
    <i-avatar bind:tap="showInfo" slot="icon"></i-avatar>
    <view wx:if="{{item.needConfirm}}" class="check" slot="footer">
      <i-icon type="right" size="28" color="#80848f" />
      <i-icon type="close" size="28" color="#80848f" />
    </view>
  </i-cell>
</i-cell-group>
<user-info isShow="{{mask}}"></user-info>